acl "interna" {

	127.0.0.0/8;
	::1/128;
	172.16.0.0/16;

}; 
options { 
	directory “/var/cache/bind”; 

	forwarders {

		8.8.8.8 ;
		8.8.4.4 ; 

	};

	dnssec-validation auto;
	auth-nxdomain no;
	// onde esta 172.16.0.49 é o ip do pc
	listen-on { 127.0.0.1; 172.16.0.49; };
	listen-on-v6 { ::1; };
	allow-query { "interna"; };
	allow-recursion { "interna"; };
	allow-transfer { none; };
	version none;

}; 
